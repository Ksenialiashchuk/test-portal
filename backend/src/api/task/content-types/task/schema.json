{
  "kind": "collectionType",
  "collectionName": "tasks",
  "info": {
    "singularName": "task",
    "pluralName": "tasks",
    "displayName": "Task",
    "description": "Individual task/quest within a mission"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "type": {
      "type": "enumeration",
      "enum": ["quiz", "survey", "action", "other"],
      "default": "quiz",
      "required": true
    },
    "order": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "mission": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::mission.mission",
      "inversedBy": "tasks"
    }
  }
}
