{
  "kind": "collectionType",
  "collectionName": "missions",
  "info": {
    "singularName": "mission",
    "pluralName": "missions",
    "displayName": "Mission",
    "description": "Mission (set of quizzes)"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "active", "completed"],
      "default": "draft",
      "required": true
    },
    "tasks": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::task.task",
      "mappedBy": "mission"
    }
  }
}
